<html>
    <head>
      <title>
        <%= locals.title %>
      </title>
      <link rel="stylesheet" href="/css/home.css">
      <script src="https://kit.fontawesome.com/b319252f93.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <h1 id="CL"><i class="fas fa-address-book"></i> Contacts List </h1>
        <div id="contacts-list-container">
            <ul>
                <% for (let i of contact_list) { %>
                    <li class="contact">
                    <div id="details">
                        <p><%= i.name %></p>
                        <p><%= i.phone %></p>
                    </div>
                    <div class="delete-button">
                        <a href="/delete-contact/<%= i.phone %>">
                            delete
                        </a>
                    </div>
                    </li>
                <% } %>                 
            </ul>
        </div>

        <form id="new-contact-form" action="/create-contact" method="POST"> 
            <input type="text" name="name" placeholder="Enter Name" required>
            <input type="phone" name="phone" placeholder="Enter Phone" required>
            <button type="submit">Add Contact</button>
        </form>

        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>